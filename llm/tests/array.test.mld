## Test groupBy
/var @grouped = @groupBy(@items, "category")
/exe @getProp(obj, key) = js { return obj[key] }
/exe @hasProp(obj, key) = js { return obj && obj.hasOwnProperty(key) }
/var @test_groupBy_has_fruit = @ok(@hasProp(@grouped, "fruit"))
/var @test_groupBy_has_vegetable = @ok(@hasProp(@grouped, "vegetable"))
/var @test_groupBy_fruit_count = @eq(@length(@getProp(@grouped, "fruit")), 2)
/var @test_groupBy_vegetable_count = @eq(@length(@getProp(@grouped, "vegetable")), 1)