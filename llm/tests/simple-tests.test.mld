## Test conditionals
/var @condition = true
/var @test_condition_truthy = @ok(@condition)
/var @test_condition_falsy = @notOk(false)

## Test deep equality
/var @obj1 = {"a": 1, "b": [2, 3]}
/var @obj2 = {"a": 1, "b": [2, 3]}
/var @obj3 = {"a": 1, "b": [2, 4]}
/var @test_deepEq_same = @deepEq(@obj1, @obj2)
/var @test_deepEq_different = @notOk(@deepEq(@obj1, @obj3))